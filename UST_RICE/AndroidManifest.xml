<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ust_rice"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.ust_rice.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ust_rice.FoodMenu"
            android:label="@string/title_activity_food_menu"
            android:parentActivityName="com.example.ust_rice.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ust_rice.MainActivity" />
        </activity>
        <activity
            android:name="com.example.ust_rice.Recommend"
            android:label="@string/title_activity_recommend"
            android:parentActivityName="com.example.ust_rice.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ust_rice.MainActivity" />
        </activity>
        <activity
            android:name="com.example.ust_rice.Ranking"
            android:label="@string/title_activity_ranking"
            android:parentActivityName="com.example.ust_rice.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ust_rice.MainActivity" />
        </activity>
        <activity
            android:name="com.example.ust_rice.Favourites"
            android:label="@string/title_activity_favourites"
            android:parentActivityName="com.example.ust_rice.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ust_rice.MainActivity" />
        </activity>
        <activity
            android:name="com.example.ust_rice.Account"
            android:label="@string/title_activity_account"
            android:parentActivityName="com.example.ust_rice.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.ust_rice.MainActivity" />
        </activity>
        <activity
            android:name="com.example.ust_rice.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

</manifest>